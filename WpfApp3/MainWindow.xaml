        <Button x:Name="btn0" Content="0" HorizontalAlignment="Left" Height="43" Margin="95,295,0,0" VerticalAlignment="Top" Width="41" FontSize="22" Click="Btns_Click"/>
        <Button x:Name="btnComa" Content="," HorizontalAlignment="Left" Height="43" Margin="24,295,0,0" VerticalAlignment="Top" Width="41" FontSize="22" Click="Btns_Click"/>
        <Button x:Name="btnIgual" Content="=" HorizontalAlignment="Left" Height="43" Margin="11.2,295,0,0" VerticalAlignment="Top" Width="41" FontSize="22" Click="BtnIgual_Click" Grid.Column="1"/>
        <Button x:Name="btnDivision" Content="/" HorizontalAlignment="Left" Height="43" Margin="69.2,295,0,0" VerticalAlignment="Top" Width="41" FontSize="22" Click="BtnOperacion_Click" Grid.Column="1"/>
        <Button x:Name="btnBorrar" Content="&lt;-" HorizontalAlignment="Left" Height="43" Margin="129.2,81,0,0" VerticalAlignment="Top" Width="41" FontSize="22" Click="BtnBorrar_Click" Grid.Column="1"/>

    </Grid>
</Window>
