        <Button x:Name="btn4" Content="4" HorizontalAlignment="Left" Height="43" Margin="24,155,0,0" VerticalAlignment="Top" Width="41" RenderTransformOrigin="0.429,0.628" FontSize="22" Click="Btns_Click"/>
