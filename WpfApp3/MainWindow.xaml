        <Button x:Name="btn7" Content="7" HorizontalAlignment="Left" Height="43" Margin="24,223,0,0" VerticalAlignment="Top" Width="41" FontSize="22" Click="Btns_Click"/>
        <Button x:Name="btn8" Content="8" HorizontalAlignment="Left" Height="43" Margin="95,223,0,0" VerticalAlignment="Top" Width="41" FontSize="22" Click="Btns_Click"/>
        <Button x:Name="btn9" Content="9" HorizontalAlignment="Left" Height="43" Margin="11.2,223,0,0" VerticalAlignment="Top" Width="41" FontSize="22" Click="Btns_Click" Grid.Column="1"/>
